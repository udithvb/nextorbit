        <div uk-slider="sets: true; finite: true">
            <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-5@m uk-grid">
                {% for member in data.team %}
                    <li class="team-member">
                        <img uk-img="data-src: {{data.assets.images}}/team/{{member.image}}" src="{{data.assets.images}}/avatar.png" alt="{{member.name}}" class="uk-border-circle">
                        <div class="uk-text-center uk-margin-small-top">
                            <div class="text-bold member-name">{{member.name}}</div>
                            <div class="text-light uk-text-small member-designation">{{member.designation}}</div>
                            {% if member.department %}
                                <div class="text-light uk-text-small member-department">{{member.department}}</div>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>

        </div>

