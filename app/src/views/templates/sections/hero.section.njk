<div class="uk-section uk-padding-remove" id="hero" uk-height-viewport="offset-top: true">
    <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slideshow="animation: fade; autoplay: true;">

        <ul class="uk-slideshow-items" uk-height-viewport="offset-top: true">
            {% for slide in data.slideshow %}
                <li>
                    <img src="{{data.assets.images}}/slideshow/{{slide.image}}" uk-cover>
                    <div class="uk-overlay uk-overlay-primary uk-position-cover uk-flex uk-flex-middle">
                        <div class="slideshow-slide-content uk-width-1-1 uk-width-3-5@m">
                            <h2 class="slideshow-heading uk-margin-remove-bottom">
                                Pricing For Profit, Competitor & Price Discovery, Demand Forecasting.
                            </h2>
                            <h3 class="slideshow-subheading uk-margin-remove-top">Enabled By AI & Machine Learning</h3>

                            <div uk-scrollspy="cls: uk-animation-slide-bottom-small; delay:600;">
                                <span class="slideshow-content">
                                    {{slide.content}}
                                </span>
                            </div>

                            <div class="uk-margin-top" uk-scrollspy="cls: uk-animation-slide-bottom-small;delay: 700;">
                                <a href="#" class="uk-button uk-button-gradient">Learn More</a>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>

        <div class="slideshow-dots uk-position-center-right">
            <ul class="uk-slideshow-nav uk-dotnav uk-dotnav-vertical"></ul>
        </div>

    </div>
</div>

