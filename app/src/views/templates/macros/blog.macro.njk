{% macro article(title, summary, link, author, date, image) %}
    <!--
        Article
        src/views/templates/macros/blog.macro.njk -> article
    -->
    <div class="article">
        <img src="{{image}}" alt="{{title}}" class="article-img">
        <div class="article-body">
            <h3 class="article-title">{{title}}</h3>
            <p class="article-summary text-light">{{summary}}</p>
            <div class="article-actions uk-text-right">
                <a href="{{link}}">Read More</a>
            </div>
            <div class="article-meta">
                <span class="uk-text-bold uk-margin-small-right">{{author}}</span>
                <span class="text-light">{{date}}</span>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro article_thumb(title, author, date, image) %}
    <!--
        Article
        src/views/templates/macros/blog.macro.njk -> article_thumb
    -->
    <div class="uk-grid-small article-thumb" uk-grid>
        <div class="uk-width-1-3 uk-flex">
            <img src="{{image}}" alt="{{title}}" class="article-img">
        </div>
        <div class="uk-width-2-3">
            <h3 class="article-title">{{title}}</h3>
            <div class="article-meta">
                <span class="uk-text-bold uk-margin-small-right">{{author}}</span>
                <span class="text-light">{{date}}</span>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro article_thumb_large(title, summary, link, author, date, image) %}
    <!--
        Article
        src/views/templates/macros/blog.macro.njk -> article_thumb_large
    -->
    <div class="uk-grid-medium article-thumb-large" uk-grid>
        <div class="uk-width-1-4 uk-flex">
            <img src="{{image}}" alt="{{title}}" class="article-img">
        </div>
        <div class="uk-width-expand uk-flex uk-flex-column">
            <h3 class="article-title">{{title}}</h3>
            <p class="article-summary text-light">{{summary}}</p>
            <div class="article-meta uk-margin-auto-top uk-flex">
                <span class="uk-text-bold uk-margin-small-right">{{author}}</span>
                <span class="text-light">{{date}}</span>

                <span class="uk-margin-auto-left article-actions">
                    <a href="{{link}}">Read More</a>
                </span>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro article_item(title, date) %}
    <div class="article-item">
        <h3 class="article-title">{{title}}</h3>
        <div class="article-date">{{date}}</div>
    </div>
{% endmacro %}

{% macro comment(author, text, image) %}
    <div class="uk-grid-medium comment" uk-grid>
        <div class="uk-width-auto">
            <img class="uk-border-circle" width="40" height="40" src="{{image}}" alt="{{author}}">
        </div>
        <div class="uk-width-expand">
            <div class="author-name">{{author}}</div>
            <div class="comment-text uk-text-small uk-text-justify">{{text}}</div>
        </div>
    </div>
{% endmacro %}