
{% macro people(id, title, members, data) %}
    <div class="uk-section uk-section-light" id="{{id}}">
        <div class="uk-container uk-text-center">
            <h2 class="uk-heading-mini text-light uk-margin-medium-bottom" uk-scrollspy="cls: uk-animation-fade; repeat: true">{{title}}</h2>
        </div>
    </div>
{% endmacro %}

{% macro people(id, members, data) %}
    <div class="people-slider">
        {% for member in members %}
            <div>
                <div class="team-member">
                    <img uk-img="data-src: {{data.assets.images}}/{{id}}/{{member.image}}" src="{{data.assets.images}}/avatar.png" alt="{{member.name}}" class="uk-border-circle">
                    <div class="uk-text-center uk-margin-small-top">
                        <div class="text-bold member-name">{{member.name}}</div>
                        <div class="text-light uk-text-small member-designation uk-visible@m">{{member.designation}}</div>
                        {% if member.department %}
                            <div class="text-light uk-text-small member-department uk-visible@m">{{member.department}}</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %} 